<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- add account servlet -->
    <servlet>
        <servlet-name>addAccount</servlet-name>
        <servlet-class>servlets.AddAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addAccount</servlet-name>
        <url-pattern>/addAccount</url-pattern>
    </servlet-mapping>


    <!-- accounts list servlet -->
    <servlet>
        <servlet-name>listAccount</servlet-name>
        <servlet-class>servlets.listAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listAccount</servlet-name>
        <url-pattern>/listAccount</url-pattern>
    </servlet-mapping>


    <!-- delete account servlet -->
    <servlet>
        <servlet-name>deleteAccount</servlet-name>
        <servlet-class>servlets.DeleteAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteAccount</servlet-name>
        <url-pattern>/deleteAccount</url-pattern>
    </servlet-mapping>

    <!-- get balance servlet -->
    <servlet>
        <servlet-name>getBalance</servlet-name>
        <servlet-class>servlets.AccountBalance</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getBalance</servlet-name>
        <url-pattern>/getBalance</url-pattern>
    </servlet-mapping>

    <!-- take money servlet -->
    <servlet>
        <servlet-name>takeMoney</servlet-name>
        <servlet-class>servlets.takeMoney</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>takeMoney</servlet-name>
        <url-pattern>/takeMoney</url-pattern>
    </servlet-mapping>

    <!-- add money servlet -->
    <servlet>
        <servlet-name>addMoney</servlet-name>
        <servlet-class>servlets.addMoney</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addMoney</servlet-name>
        <url-pattern>/addMoney</url-pattern>
    </servlet-mapping>


    <!-- money transfer servlet -->
    <servlet>
        <servlet-name>moneyTransfer</servlet-name>
        <servlet-class>servlets.moneyTransfer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>moneyTransfer</servlet-name>
        <url-pattern>/moneyTransfer</url-pattern>
    </servlet-mapping>
</web-app>